<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="612.0" prefWidth="839.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ExaminationSystem.EditCoursePageController">
   <children>
      <Button layoutX="24.0" layoutY="21.0" mnemonicParsing="false" onAction="#return_event" prefHeight="30.0" prefWidth="74.0" style="-fx-background-color: #2E2E18; -fx-text-fill: #f2efef; -fx-font-family: 'Lucida Sans Unicode'; -fx-font-size: 13.0;" text="Return" />
      <ComboBox fx:id="List" blendMode="HARD_LIGHT" layoutX="672.0" layoutY="24.0" onAction="#select_course" prefWidth="150.0" promptText="Select a Course" />

      <TextArea fx:id="contentTextArea" layoutX="24.0" layoutY="70.0" prefHeight="400.0" prefWidth="600.0" promptText="Course Content" />

      <Button layoutX="24.0" layoutY="480.0" mnemonicParsing="false" onAction="#updateCourseContent" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #2E2E18; -fx-text-fill: #f2efef; -fx-font-family: 'Lucida Sans Unicode'; -fx-font-size: 13.0;" text="Update Content" />

      <ListView fx:id="filesListView" layoutX="650.0" layoutY="70.0" onMouseClicked="#openFile" prefHeight="500.0" prefWidth="160.0" />

      <Button layoutX="650.0" layoutY="590.0" mnemonicParsing="false" onAction="#addFileButton" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #2E2E18; -fx-text-fill: #f2efef; -fx-font-family: 'Lucida Sans Unicode'; -fx-font-size: 13.0;" text="Add File" />

      <Label fx:id="errorLabel" layoutX="24.0" layoutY="520.0" prefWidth="600.0" textFill="red" />

   </children>
</AnchorPane>
